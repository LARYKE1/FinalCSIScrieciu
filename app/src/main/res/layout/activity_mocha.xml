<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MochaActivity">


    <ImageView
        android:id="@+id/MochaImg"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="4dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptionMocha"
            android:text="hello"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Type of Mocha:"/>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Mocha 1"
                android:id="@+id/checkboxMocha1"
                android:textSize="20dp"
                android:hint="Mocha 1"></CheckBox>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Mocha 2"
                android:id="@+id/checkboxMocha2"
                android:textSize="20dp"
                android:hint="Mocha 2"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Mocha 3"
                android:id="@+id/checkboxMocha3"
                android:textSize="20dp"
                android:hint="Mocha 3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/txtPriceMocha1"
                android:gravity="center"
                android:hint="price"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/txtPriceMocha2"
                android:hint="price"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/txtPriceMocha3"
                android:hint="price"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Extras:"/>

        <LinearLayout
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:id="@+id/txtExtrasMocha1"
                android:text="Sugar"></CheckBox>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:id="@+id/txtExtrasMocha2"
                android:text="Milk"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/txtExtrasMocha3"
                android:textSize="20dp"
                android:text="Honey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:id="@+id/txtPriceExtraMocha1"
                android:hint="price"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:hint="price"
                android:id="@+id/txtPriceExtraMocha2"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:hint="price"
                android:id="@+id/txtPriceExtraMocha3"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="-30sp"
            android:gravity="center">

            <Button
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/removeQuantityMocha"
                android:hint="-"
                android:textSize="30sp"/>

            <EditText
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:hint="1"
                android:id="@+id/editTxtQuantityMocha"
                android:inputType="number"
                android:gravity="center"
                android:textSize="30sp"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/quantityAddMocha"
                android:hint="+"
                android:textSize="30sp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp">
        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnOrder"
            android:hint="ADD TO ORDER"
            android:textSize="20dp"/>

        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelOrder"
            android:hint="CANCEL"
            android:textSize="20dp"/>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>